<% provide(:title, @user.firstname) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.firstname %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.shops.any? %>
      <h3>Shops (<%= @user.shops.count %>)</h3>
      <ol class="microposts">
        <%= render @shops %>
      </ol>
      <%= will_paginate @shops %>
    <% end %>
    <% if @user.events.any? %>
      <h3>Events (<%= @user.events.count %>)</h3>
      <ol class="microposts">
        <%= render @events %>
      </ol>
    <% end %>
    <% if @ratings.any? %>
      <h3>My Fav Shop (<%= @ratings.size %>)</h3>
      <ol class="microposts">
        <%= render @ratings %>
      </ol>
      <%= will_paginate @ratings %>
    <% end %>
  </div>

</div>