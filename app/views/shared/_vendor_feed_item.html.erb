<li id="<%= vendor_feed_item.id %>">
  <%= link_to gravatar_for(vendor_feed_item.user), vendor_feed_item.user %>
  <span class="user">
    <%= link_to vendor_feed_item.user.firstname, vendor_feed_item.user %>
  </span>
  <span class="content"><%= vendor_feed_item.name %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(vendor_feed_item.created_at) %> ago.
  </span>
  <% if current_user?(vendor_feed_item.user) %>
    <%= link_to "delete", vendor_feed_item, method: :delete,
                                     data: { confirm: "You sure?" },
                                     title: vendor_feed_item.name %>
  <% end %>
</li>